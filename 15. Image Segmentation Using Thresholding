subplot 231;
I = imread('cameraman.tif');
imshow(I);
title('Original');
subplot 232;
H = zeros(1,256);
for i = 1:256
    for j = 1:256
        Z = I(i,j);
        H(1,Z)= H(1,Z) + 1;
    end
end
bar(H);
title('Histogram');

sumPixels = 0;
numPixels = numel(I);

for i = 1:size(I,1)
    for j = 1:size(I,2)
         sumPixels = sumPixels + double(I(i,j));
    end
end

mean = sumPixels/numPixels;

subplot 233;
th2 = mean;
th1 = 0.8*th2;
th3 = 1.2*th2;

[h,w] = size(I);

for i = 1:h
    for j = 1:w
        if I(i,j) < th1
            I(i,j) = 5;
        else if I(i,j) > th1 && I(i,j) < th2
            I(i,j)= mean;
        else if I(i,j) > th2 && I(i,j) < th3
            I(i,j) = mean;
        else if I(i,j) > th3
            I(i,j) = 220;
            end
            end
            end
        end
    end
end

imshow(I);
title('Segmented Image');

subplot 234;
M = zeros(1,256);
for i = 1:256
    for j = 1:256
        K = I(i,j);
        M(1,K)= M(1,K) + 1;
    end
end
bar(M);
title('Segmented Histogram');

subplot 235;
[counts,x] = imhist(I,16);
stem(x,counts);
T = otsuthresh(counts);
BW = imbinarize(I,T);
imshow(BW);
title('OtsuThresh Image');

subplot 236;
G = zeros(1,256);
for i = 1:256
    for j = 1:256
        B = I(i,j);
        G(1,B)= G(1,B) + 1;
    end
end
bar(G);
title('OtsuThresh Histogram');

saveas(gcf,'Segmentation.jpg');
